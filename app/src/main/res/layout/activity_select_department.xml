<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="@color/white">

    <!-- Select Department -->
    <Button
        android:id="@+id/buttonDepartment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Department"
        android:drawableLeft="@android:drawable/ic_menu_agenda"
        android:backgroundTint="@color/blue"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:padding="14dp"
        android:layout_marginBottom="16dp"
        android:elevation="4dp"/>

    <!-- Select Semester -->
    <Button
        android:id="@+id/buttonSemester"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Semester"
        android:drawableLeft="@android:drawable/ic_menu_today"
        android:backgroundTint="@color/blue"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:padding="14dp"
        android:layout_marginBottom="16dp"
        android:elevation="4dp"
        android:enabled="false"/>  <!-- Disabled until department is selected -->

    <!-- Proceed Button -->
    <Button
        android:id="@+id/buttonProceedNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Proceed"
        android:backgroundTint="@color/black"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:padding="14dp"
        android:layout_marginTop="8dp"
        android:elevation="6dp"
        android:enabled="false"/>  <!-- Disabled until semester is selected -->

</LinearLayout>
